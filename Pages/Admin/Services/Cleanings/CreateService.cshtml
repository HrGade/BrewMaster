@page
@model BrewMaster.Pages.Admin.Services.CreateServiceModel
@{
    <p>
        <a asp-page="/Index" class="btn btn-secondary">Tilbage til forsiden</a>
    </p>

    ViewData["Title"] = "Create Service";
}

<h1>Create Service</h1>

<form method="post">
    <div class="form-group">
        <!--Redigeringsfelt for Dato -->
        <label asp-for="Service.Date" class="control-label"></label>
        <input asp-for="Service.Date" class="form-control" />
        <span asp-validation-for="Service.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <!--Redigeringsfelt for ServiceType -->
        <label asp-for="Service.ServiceType" class="control-label"></label>
        <input asp-for="Service.ServiceType" class="form-control" />
        <span asp-validation-for="Service.ServiceType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <!--Redigeringsfelt for UserId -->
        <label asp-for="Service.UserId" class="control-label"></label>
        <input asp-for="Service.UserId" class="form-control" />
        <span asp-validation-for="Service.UserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opret Opgave</button> <!--Knap til at oprette opgave -->
    <a asp-page="/Admin/Services/Cleanings/ExistingService" class="btn btn-secondary">Annuller</a> <!--Knap til at annulere -->
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}










