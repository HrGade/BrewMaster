@page
@model BrewMaster.Models.Pages.Admin.AdminCRUD.Repository.DeleteEmployeeModel

@{
    <p>
        <a asp-page="/Index" class="btn btn-secondary">Tilbage til forsiden</a>
    </p>

    ViewData["Title"] = "Slet Medarbejder";
}

<h2>Slet Medarbejder</h2>

@if (Model.Employee == null)
{
    <p>Medarbejderen blev ikke fundet.</p>
    <a asp-page="/Admin/AdminCRUD/CreateEmployee" class="btn btn-success">Opret medarbejder</a>
}
else
{
    <p>Er du sikker på, at du vil slette denne medarbejder?</p>

    <div>
        <dl class="row">
            <dt class="col-sm-2">Navn</dt>
            <dd class="col-sm-10">@Model.Employee.Name</dd> 

            <dt class="col-sm-2">Brugertype</dt>
            <dd class="col-sm-10">@Model.Employee.UserType</dd>
        </dl>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Employee.UserId" />
        <button type="submit" class="btn btn-danger">Slet</button>
        <a asp-page="/Admin/AdminCRUD/ExistingEmployee" class="btn btn-secondary">Annuller</a>
    </form>
}