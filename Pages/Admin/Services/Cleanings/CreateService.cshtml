@page
@model BrewMaster.Models.Pages.Admin.Services.Cleanings.CreateServiceModel

@{
    ViewData["Title"] = "Opret Service";
}

<h2>Opret Service</h2>

<form method="post">
    <!-- Dato for servicen -->
    <div class="form-group">
        <label asp-for="Service.Date" class="control-label">Service Dato</label>
        <input asp-for="Service.Date" class="form-control" type="date" />
        <span asp-validation-for="Service.Date" class="text-danger"></span>
    </div>

    <!-- Service type -->
    <div class="form-group">
        <label asp-for="Service.ServiceType" class="control-label">Service Type</label>
        <input asp-for="Service.ServiceType" class="form-control" />
        <span asp-validation-for="Service.ServiceType" class="text-danger"></span>
    </div>

    <!-- Vælg en medarbejder -->
    <div class="form-group">
        <label asp-for="Service.UserId" class="control-label">Medarbejder</label>
        <select asp-for="Service.UserId" class="form-control">
            <option value="">-- Vælg medarbejder --</option>
            @foreach (var employee in Model.Employee)
            {
                <option value="@employee.UserId">@employee.Name</option>
            }
        </select>
        <span asp-validation-for="Service.UserId" class="text-danger"></span>
    </div>

    <!-- Submit knap -->
    <button type="submit" class="btn btn-primary">Opret</button>
    <a asp-page="/Admin" class="btn btn-secondary">Annuller</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}