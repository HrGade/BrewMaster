@page "{serviceId:int}/{userId:int}/{serviceType}"
@model BrewMaster.Pages.Admin.Services.Cleanings.DeleteServiceModel
@{
    <p>
        <a asp-page="/Index" class="btn btn-secondary">Tilbage til forsiden</a>
    </p>


    ViewData["Title"] = "Delete Service";
}

<h1>Slet Opgave</h1>

<h4>Er du sikker på at du gerne vil slette denne opgave</h4>
<hr />

<div>
    <h3>@Model.Service.ServiceType</h3>
    <p>UserId: @Model.Service.UserId</p>
    <p>Date: @Model.Service.Date</p>
    <p>Employee: @Model.Employee?.Name</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Service.ServiceId" />
    <input type="hidden" asp-for="Service.UserId" />
    <input type="hidden" asp-for="Service.ServiceType" />
    <div>
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-page="/Admin/Services/Cleanings/ExistingService" class="btn btn-secondary">Annuler</a>
    </div>
</form>

