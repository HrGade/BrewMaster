            <button class="BtnBg">
                <a asp-page="/Admin/MachineDashboard">Gå til Kaffemaskiner</a>    <!-- Knap til at gå til MachineDashboard -->
            </button>

        </article>



        <article class="AdminBokse bg-white m-5 p-2 boxWidth text-center">
            <h5 class="card-title">Rengøringer</h5>
