@page
@model BrewMaster.Models.Pages.Admin.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<p>
    <a asp-page="/Index" class="btn btn-secondary">Tilbage til forsiden</a>
</p>


    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Administrator side</h1>
        </div>
    </div>

<section class="pb-5">

    <div class="d-flex justify-content-between">

        <article class="AdminBokse bg-white m-5 p-2 boxWidth text-center">
            <h5 class="card-title">Medarbejder-side</h5>
            <p class="card-text">Administrer dine medarbejdere</p>

            <button class="BtnBg">
